SRC = Bureaucrat.cpp Form.cpp GradeTooLowException.cpp GradeTooHighException.cpp \
main.cpp
OBJ = $(SRC:.cpp=.o)
GPP = c++ -std=c++98
GFLAGS = -Wall -Wextra -Werror
RM = rm -rf
NAME = base_form

all: $(NAME)
	$(NAME): $(OBJ)
$(GPP) $(OBJ) -o $(NAME)
%.o: %.cpp
	$(GPP) $(GFLAGS) -c $?
clean:
	$(RM) $(OBJ)
fclean : clean
	$(RM) $(NAME)
re : fclean all